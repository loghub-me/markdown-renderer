{
  "name": "@loghub-me/markdown-renderer",
  "version": "0.2.3",
  "description": "A markdown renderer for LogHub",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --treeshake --minify",
    "test": "node --test --import tsx test/*.ts"
  },
  "sideEffects": false,
  "author": "loghub-me",
  "license": "Apache-2.0",
  "homepage": "https://github.com/loghub-me/markdown-renderer",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "markdown",
    "markdown-renderer"
  ],
  "dependencies": {
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.3.1",
    "@types/sanitize-html": "^2.16.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist"
  ]
}
